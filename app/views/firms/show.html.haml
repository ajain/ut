- @firms = Firm.all
- @documents = Document.all

= render partial: 'shared/toolbar'

.content
  .title
    %h1= @firm.firm_name
  .main
    .documents-container.mainwidth
      .tabs
        %p Documents
        %ul
          %li Recent
          %li All
      .container-box.mainwidth
        .widget
          - @documents.each do |document|
            .row
              .firm-name
                %p document.filename

    .documents-container.mainwidth
      .tabs
        %p Notes
        %ul
          %li Recent
          %li All
      .container-box.mainwidth
  .sidebar
    .documents-container.sidebarwidth
      .tabs
        %p Favorites
        %ul
          %li Yours
          %li Group
      .container-box.sidebarwidth
    .documents-container.sidebarwidth
      .tabs
        %p Emails
      .container-box.sidebarwidth

    / %p#notice= notice

    %p= link_to "Firm name", @firm
    / %p
    /   %b Firm name:
    /   = @firm.firm_name
    / %p
    /   %b Short name:
    /   = @firm.short_name
    / %p
    /   %b Firm type:
    /   = @firm.firm_type
    / %p
    /   %b Phone:
    /   = @firm.phone
    / %p
    /   %b Fax:
    /   = @firm.fax
    / %p
    /   %b Emergency phone:
    /   = @firm.emergency_phone
    / %p
    /   %b Website:
    /   = @firm.website
    / %p
    /   %b Status:
    /   = @firm.status
    / %p
    /   %b Document:
    /   = @firm.document_id

    / = link_to 'Edit', edit_firm_path(@firm)
    / \|
    / = link_to 'Back', firms_path
