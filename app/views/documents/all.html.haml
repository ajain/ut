%table
  - @documents.each do |document|
    %tr
      %td= document.filename
      %td= document.documenttype
      %td= document.firm
      %td= document.fund
      %td= document.month
      %td= document.year
      %td= document.group
      %td= document.investmentcat
      %td= document.url

      %td= link_to 'Show', document
      %td= link_to 'Edit', edit_document_path(document)
      %td= link_to 'Delete', document, :confirm => 'Are you sure?', :method => :delete
%br

= link_to 'New Document', new_document_path